<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
    </style>

    <!-- Custom Button Style -->
    <style name="CustomButtonStyle">
        <item name="android:background">@drawable/rounded_objects</item>
        <item name="android:textColor">#FFFFFF</item> <!-- White text color -->
    </style>

    <style name="ButtonNotPressed">
        <item name="android:background">#87CEEB</item>
        <item name="android:textColor">#FFFFFF</item> <!-- White text color -->
    </style>

    <!-- Custom Night Mode -->
    <style name="Theme.FinancePlaner.Dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#1E90FF</item> <!-- Cool Blue -->
        <item name="colorPrimaryDark">#104E8B</item> <!-- Darker Cool Blue -->
        <item name="colorAccent">#FFC107</item> <!-- Bright Yellow -->
        <item name="android:windowBackground">#121212</item> <!-- Dark background -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text for dark background -->
    </style>

    <!-- Custom Day Mode -->
    <style name="Theme.FinancePlaner" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#1E90FF</item> <!-- Cool Blue -->
        <item name="colorPrimaryDark">#104E8B</item> <!-- Darker Cool Blue -->
        <item name="colorAccent">#FFC107</item> <!-- Bright Yellow -->
        <item name="android:windowBackground">#F0F8FF</item> <!-- Light Blue/White -->
        <item name="android:textColor">#000000</item> <!-- Black text for light background -->
    </style>
</resources>

